<configuration scan="true" scanPeriod="10 seconds">
    <jmxConfiguration/>
    <appender name="STDOUT" class="cg.gos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>